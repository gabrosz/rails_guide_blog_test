<p id="notice"><%= notice %></p>

<h1>Post #<%= @post.id %></h1>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= raw @post.content.nl2br %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
